#:import utils kivy.utils

<Button>
    font_size: 32
    size_hint: (0.3,0.3)
    background_normal : ''
    background_color : utils.get_color_from_hex('#FF6600')
<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top left"
            pos_hint: {"x":0, "top": 1}
        Button:
            text: "Top Right"
            pos_hint: {"x":0.7, "top": 1}
        Button:
            text: "Center"
            pos_hint: {"x":0.35, "y": 0.35}
        Button:
            text: "Bottom left"
            pos_hint: {"x":0}
        Button:
            text: "Bottom Right"
            pos_hint: {"x":0.7, "top": 0.30}