#:import utils kivy.utils
<Button>
    font_size: 32
    background_normal : ''
    background_color : utils.get_color_from_hex('#FF67FF')

<TextInput>
    font_size: 24
    background_normal : ''
    background_color : utils.get_color_from_hex('#dce7f7')

<Label>
    font_size: 24

<MyLayout>
    canvas.before:
        Color:
            rgba: (255/255, 255/255, 255/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 10
        padding: 10

        Image:
            source: 'images/IMG_3343.jpeg'
            allow_strerch: True
            keep_ratio : True

        Label:
            text: "Name"
            background_normal : ''
            background_color : (0.08,0.08,0.08,1)
            font_size: 24
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            #Text props
            color: (0,1,1,1)
            bold: True
            outline_color: (0,0,0,1)
            outline_width: 2


        TextInput:
            multiline: False

        Label:
            text: "WhatÂ´s your name"
            font_size: 32
            color: (0,0,0,1)
        TextInput:
            multiline: False
            size_hint: (1, 0.5)
        Button:
            text: 'Submit'
            size_hint: (1,0.5)

        Button:
            text: "Submit"
            size_hint: (None,None)
            pos_hint: {'center_x': 0.5}
            width: 200
            height: 50

        Button:
            text: "Clear"
            size_hint: (None,None)
            pos_hint: {'center_x': 0.5}
            width: 200
            height: 50
            background_color : utils.get_color_from_hex('#f73802')