#:import utils kivy.utils

<MyGridLayout>

    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline : False
                background_color : utils.get_color_from_hex('#FF67FF')

            Label:
                text: "Favorite pizza"
            TextInput:
                id: pizza
                multiline : False

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline : False

        Button:
            text: "Submit"
            font_size: 32
            on_press : root.press()
            background_normal : ''
            #background_color : (255/255,102/255,0/255,1)
            background_color : utils.get_color_from_hex('#FF6600')
